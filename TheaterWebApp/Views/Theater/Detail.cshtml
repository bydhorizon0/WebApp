@model MovieDetailViewModel

@{
    TempData["Title"] = "영화 리스트";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-md-5">
            @if (Model.MovieImages?.Any() == true)
            {
                <div id="movieImageCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.MovieImages.Count; i++)
                        {
                            var image = Model.MovieImages.ElementAt(i);
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@image.Path" class="d-block w-100 rounded" alt="@Model.Title">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#movieImageCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">이전</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#movieImageCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">다음</span>
                    </button>
                </div>
            }
            else
            {
                <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 300px;">
                    이미지 없음
                </div>
            }
        </div>

        <div class="col-md-7">
            <h2>@Model.Title</h2>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="text-muted">@Model.Description</p>
            }

            <ul class="list-unstyled">
                @if (Model.ReleaseDate.HasValue)
                {
                    <li><strong>개봉일:</strong> @Model.ReleaseDate.Value.ToString("yyyy-MM-dd")</li>
                }

                @if (Model.Genres?.Any() == true)
                {
                    <li><strong>장르:</strong> @string.Join(", ", Model.Genres)</li>
                }

                <li><strong>평점:</strong> @Model.MovieRating.ToString("0.0") / 5.0</li>
            </ul>
        </div>
    </div>

    <div class="mt-5">
        <h4>댓글 작성</h4>
        <form asp-action="SaveComment" asp-controller="Theater" asp-route-movieId="@Model.Id" method="post">
            <div class="mb-3">
                <label for="commentContent" class="form-label">내용</label>
                <textarea name="Comment" class="form-control" id="commentContent" rows="3" required></textarea>
            </div>
            <input type="hidden" name="ParentCommentId" value=""/>
            <button type="submit" class="btn btn-primary">댓글 작성</button>
        </form>
    </div>

    @if (Model.Comments?.Any() == true)
    {
        <div class="mt-5">
            <h4>댓글</h4>
            <ul class="list-group">
                @foreach (var comment in Model.Comments)
                {
                    <li class="list-group-item">
                        <strong>@comment.UserNickname</strong>
                        <small class="text-muted">(@comment.CreatedAt.ToString("yyyy-MM-dd HH:mm"))</small>
                        <p class="mb-1">@comment.Content</p>

                        <!-- 대댓글 작성 폼 toggle -->
                        <button class="btn btn-sm btn-link text-primary" type="button" data-bs-toggle="collapse"
                                data-bs-target="#replyForm-@comment.Id">
                            댓글 달기
                        </button>

                        <div class="collapse mt-2" id="replyForm-@comment.Id">
                            <form asp-action="SaveComment" asp-controller="Theater" asp-route-movieId="@Model.Id"
                                  method="post">
                                <div class="mb-2">
                                    <textarea name="Comment" class="form-control" rows="2" placeholder="내용"
                                              required></textarea>
                                </div>
                                <input type="hidden" name="ParentCommentId" value="@comment.Id"/>
                                <button type="submit" class="btn btn-sm btn-secondary">작성</button>
                            </form>
                        </div>

                        <!-- 대댓글 렌더링 -->
                        @if (comment.NestedComment?.Any() == true)
                        {
                            <ul class="list-group mt-3 ms-4">
                                @foreach (var child in comment.NestedComment)
                                {
                                    <li class="list-group-item">
                                        <strong>@(child.UserNickname)</strong>
                                        <small
                                            class="text-muted">(@child.CreatedAt.ToString("yyyy-MM-dd HH:mm"))</small>
                                        <p class="mb-1">@child.Content</p>
                                    </li>
                                }
                            </ul>
                        }
                    </li>
                }
            </ul>
        </div>
    }
    else
    {
        <p class="text-muted mt-5">댓글이 아직 없습니다.</p>
    }
</div>
